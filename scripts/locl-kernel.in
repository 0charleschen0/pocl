while getopts k:o: o
do
    case "$o" in
	k)   kernel="${OPTARG}";;
	o)   output_file="${OPTARG}";;
	[?]) echo >&2 "Usage: $0 -k <kernel> -o <output_file> <input_file>" && exit 1;;
    esac
done
shift $((${OPTIND}-1))

if [ "x$kernel" = x ]
then
    echo >&2 "Usage: $0 -k <kernel> -o <output_file> <input_file>" && exit 1
fi

if [ "x$output_file" = x ]
then
    echo >&2 "Usage: $0 -k <kernel> -o <output_file> <input_file>" && exit 1
fi

trampoline_prelink_bc="`dirname $1`/`basename $1 .bc`_trampoline_prelink.bc"
trampoline_bc="`dirname $1`/`basename $1 .bc`_trampoline.bc"
trampoline_s="`dirname $1`/`basename $1 .bc`_trampoline.s"

if [ -f @abs_top_builddir@/lib/llvmopencl/.libs/llvmopencl.so ]
then
    @OPT@ -load=@abs_top_builddir@/lib/llvmopencl/.libs/llvmopencl.so -trampoline -kernel=${kernel} -o ${trampoline_prelink_bc} $1
else
    @OPT@ -load=@pkglibdir@/llvmopencl.so -trampoline -kernel=${kernel} -o ${trampoline_prelink_bc} $1
fi
@LLVM_LD@ -link-as-library -o ${trampoline_bc} ${trampoline_prelink_bc}
@LLC@ -o ${trampoline_s} ${trampoline_bc}

gcc @SHARED@ -o ${output_file} -x assembler ${trampoline_s}