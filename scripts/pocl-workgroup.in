kernel_lib_dir=/@HOST_ARCH@
while getopts k:x:y:z:o:t: o
do
    case "$o" in
	k)   kernel="${OPTARG}";;
	x)   size_x="${OPTARG}";;
	y)   size_y="${OPTARG}";;
	z)   size_z="${OPTARG}";;
	o)   output_file="${OPTARG}";;
	t)   kernel_lib_dir="/${OPTARG}";;
	[?]) echo >&2 "Usage: $0 -k <kernel> [-x <size>] [-y <size>] [-z <size>] -o <output_file> <input_file>" && exit 1;;
    esac
done
shift $((${OPTIND}-1))

if [ "x$kernel" = x ]
then
    echo >&2 "Usage: $0 -k <kernel> [-x <size>] [-y <size>] [-z <size>] -o <output_file> <input_file>" && exit 1
fi

if [ "x$size_x" = x ]
then
    size_x=1
fi

if [ "x$size_y" = x ]
then
    size_y=1
fi

if [ "x$size_z" = x ]
then
    size_z=1
fi

if [ "x$output_file" = x ]
then
    echo >&2 "Usage: $0 -k <kernel> [-x <size>] [-y <size>] [-z <size>] -o <output_file> <input_file>" && exit 1
fi

linked_bc="`dirname $1`/`basename $1 .bc`_linked.bc"

if [ -f @abs_top_builddir@/lib/kernel/${kernel_lib_dir}/libkernel.a ]
then
    @LLVM_LD@ -b ${linked_bc} $1 -L@abs_top_builddir@/lib/kernel${kernel_lib_dir} -lkernel
else
    @LLVM_LD@ -b ${linked_bc} $1 -L@pkglibdir@${kernel_lib_dir} -lkernel
fi
rm a.out

header="`dirname $1`/`basename $1 .bc`_header.h"

if [ -f @abs_top_builddir@/lib/llvmopencl/.libs/llvmopencl.so ]
then
    @OPT@ -load=@abs_top_builddir@/lib/llvmopencl/.libs/llvmopencl.so -workgroup -kernel=${kernel} -local-size=${size_x} ${size_y} ${size_z} -header=${header} -o ${output_file} ${linked_bc}
else
    @OPT@ -load=@pkglibdir@/llvmopencl.so -workgroup -kernel=${kernel} -local-size=${size_x} ${size_y} ${size_z} -header=${header} -o ${output_file} ${linked_bc}
fi
