AT_INIT()

AT_SETUP([Graph-based llvmopencl tests])
for type in barriers btr workitem
do
  for i in $abs_top_srcdir/tests/*_$type.dot
  do
    input=`echo $i | sed s/_$type.dot/.ll/`
    output=`echo $i | sed 's/.*\///' | sed s/.dot/_test.ll/`
    graph=`echo $output | sed s/.ll/.png/`
    golden=`echo $graph | sed s/_test/_golden/`
    rm cfg.*.dot
    echo "input=$input"
    echo "output=$output"
    echo "graph=$graph"
    echo "golden=$golden"
    case $type in
      barriers) AT_CHECK([opt -load $abs_top_builddir/lib/llvmopencl/.libs/llvmopencl.so -barriers -S -o $output $input], 0, ignore, ignore) ;;
      btr)      AT_CHECK([opt -load $abs_top_builddir/lib/llvmopencl/.libs/llvmopencl.so -barriertails -S -o $output $input], 0, ignore, ignore) ;;
      workitem) AT_CHECK([opt -load $abs_top_builddir/lib/llvmopencl/.libs/llvmopencl.so -workitem -local-size=2 2 2 -S -o $output $input], 0, ignore, ignore) ;;
    esac
    opt -disable-output -dot-cfg-only $output
    dot -Tpng -o $graph cfg.*.dot
    dot -Tpng -o $golden $i
    AT_CHECK([cmp $graph $golden])
  done
done
AT_CLEANUP

AT_SETUP([OpenCL specification tests])
AT_DATA([expout],
[(0.000000, 0.000000, 0.000000, 0.000000) . (0.000000, 0.000000, 0.000000, 0.000000) = 0.000000
