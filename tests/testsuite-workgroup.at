AT_BANNER([Workgroup creation tests])

AT_SETUP([Unconditional barriers (full replication)])
AT_KEYWORDS([workgroup])
AT_CHECK_UNQUOTED([POCL_DEVICES=basic POCL_WORK_GROUP_METHOD=workitemrepl $abs_top_builddir/tests/workgroup/run_kernel basic_barriers.cl 2 2 2 2], 0,
[$(cat $abs_top_srcdir/tests/workgroup/basic_barriers_2_2_2_2.stdout)
])
AT_CLEANUP

AT_SETUP([Unconditional barriers (loops)])
AT_KEYWORDS([workgroup])
AT_CHECK_UNQUOTED([POCL_DEVICES=basic POCL_WORK_GROUP_METHOD=workitemloops $abs_top_builddir/tests/workgroup/run_kernel basic_barriers.cl 2 2 2 2], 0,
[$(cat $abs_top_srcdir/tests/workgroup/basic_barriers_2_2_2_2.stdout)
])
AT_CLEANUP

AT_SETUP([Unbarriered for loops (full replication)])
AT_KEYWORDS([workgroup])
AT_CHECK([POCL_DEVICES=basic POCL_WORK_GROUP_METHOD=workitemrepl $abs_top_builddir/tests/workgroup/run_kernel forloops.cl 2 2 1 1], 0, stdout)
AT_CHECK([cat stdout | wc -l | sed 's/ *//'], 0, [4
])
AT_CLEANUP

AT_SETUP([Unbarriered for loops (loops)])
AT_KEYWORDS([workgroup])
AT_CHECK([POCL_DEVICES=basic POCL_WORK_GROUP_METHOD=workitemloops $abs_top_builddir/tests/workgroup/run_kernel forloops.cl 2 2 1 1], 0, stdout)
AT_CHECK([cat stdout | wc -l | sed 's/ *//'], 0, [4
])
AT_CLEANUP

AT_SETUP([Barriered for loops (full replication)])
AT_KEYWORDS([workgroup])
AT_CHECK([POCL_DEVICES=basic POCL_WORK_GROUP_METHOD=workitemrepl $abs_top_builddir/tests/workgroup/run_kernel loopbarriers.cl 2 2 1 1], 0, stdout)
AT_CHECK([sort -c stdout])
AT_CLEANUP

AT_SETUP([Barriered for loops (loops)])
AT_KEYWORDS([workgroup])
AT_CHECK([POCL_DEVICES=basic POCL_WORK_GROUP_METHOD=workitemloops $abs_top_builddir/tests/workgroup/run_kernel loopbarriers.cl 2 2 1 1], 0, stdout)
AT_CHECK([sort -c stdout])
AT_CLEANUP

AT_SETUP([Conditional barrier (full replication)])
AT_DATA([expout],
[LOCAL_ID=0 before if
LOCAL_ID=0 inside if
LOCAL_ID=1 before if
LOCAL_ID=1 inside if
LOCAL_ID=0 after if
LOCAL_ID=1 after if
])
AT_KEYWORDS([condbar workgroup])
AT_CHECK([POCL_DEVICES=basic POCL_WORK_GROUP_METHOD=workitemrepl $abs_top_builddir/tests/workgroup/run_kernel conditional_barriers.cl 1 2 1 1], 0, expout)
AT_CLEANUP

AT_SETUP([Conditional barrier (loops)])
AT_DATA([expout],
[LOCAL_ID=0 before if
LOCAL_ID=0 inside if
LOCAL_ID=1 before if
LOCAL_ID=1 inside if
LOCAL_ID=0 after if
LOCAL_ID=1 after if
])
AT_KEYWORDS([condbar workgroup])
#This seemed to have broke in commit 681.1.1
AT_XFAIL_IF([grep HOST_CPU $abs_top_builddir/config.h | cut -d\" -f2 | grep -q powerpc])
AT_XFAIL_IF([grep HOST_CPU $abs_top_builddir/config.h | cut -d\" -f2 | grep -q armv])
AT_CHECK([POCL_DEVICES=basic POCL_WORK_GROUP_METHOD=workitemloops $abs_top_builddir/tests/workgroup/run_kernel conditional_barriers.cl 1 2 1 1], 0, expout)
AT_CLEANUP

AT_SETUP([b-loop with none of the WIs reaching the barrier (full replication)])
AT_DATA([expout],
[gid_x 0 after barrier at iteration 0
gid_x 1 after barrier at iteration 0
I am 0 and I break out from the loop.
I am 1 and I also break out from the loop.
])
AT_KEYWORDS([b-loop workgroup])
AT_CHECK([POCL_DEVICES=basic POCL_WORK_GROUP_METHOD=workitemrepl $abs_top_builddir/tests/workgroup/run_kernel tricky_for.cl 1 2 1 1], 0, expout)
AT_CLEANUP

AT_SETUP([b-loop with none of the WIs reaching the barrier (loops)])
AT_DATA([expout],
[gid_x 0 after barrier at iteration 0
gid_x 1 after barrier at iteration 0
I am 0 and I break out from the loop.
I am 1 and I also break out from the loop.
])
AT_KEYWORDS([b-loop workgroup])
AT_CHECK([POCL_DEVICES=basic POCL_WORK_GROUP_METHOD=workitemloops $abs_top_builddir/tests/workgroup/run_kernel tricky_for.cl 1 2 1 1], 0, expout)
AT_CLEANUP
