#!/bin/sh
while getopts h:o:cSE o
do
    case "$o" in
        h)   host="${OPTARG}";;
        o)   output="-o ${OPTARG}";;
        c)   mode=-c;;
        S)   mode=-S;;
        E)   mode=-E;;
	[?]) echo >&2 "Usage: $0 [-h <host>] [-c | -S | -E] [-o <output_file>] <input_file>" && exit 1;;
    esac
done
shift $((${OPTIND}-1))

# CLANG and llc should be defined and exported in configure script
# but in case of direct call, do something not too bad
CLANG="${CLANG:-clang}"
LLC="${LLC:-llc}"

if [ "x$host" = x ]
then
    exec $CLANG $mode $output $1
fi

config=`dirname $0`
build=`$config/config.guess`

if [ -z $TMPDIR ]
then
    TMPDIR=/tmp
fi
tmpdir=$TMPDIR/xclang$PPID
mkdir $tmpdir

if [ "$mode" = -c ]
then
    $CLANG -ccc-host-triple $host -c -emit-llvm -o $tmpdir/xclang.bc $@
    $LLC -mtriple=$build -o $tmpdir/xclang.s $tmpdir/xclang.bc
    exec $CLANG -ccc-host-triple $build -c $output $tmpdir/xclang.s
fi

if [ "$mode" = -S ]
then
    $CLANG -ccc-host-triple $host -c -emit-llvm -o $tmpdir/xclang.bc $@
    exec $LLC -mtriple=$build $output $tmpdir/xclang.bc
fi

if [ "$mode" = -E ]
then
    exec $CLANG -E $output $1
fi

$CLANG -ccc-host-triple $host -c -emit-llvm -o $tmpdir/xclang.bc $@
$LLC -mtriple=$build -o $tmpdir/xclang.s $tmpdir/xclang.bc
exec $CLANG -ccc-host-triple $build $output $tmpdir/xclang.s
