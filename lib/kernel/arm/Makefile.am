targetpkglibdir = $(pkglibdir)/arm
targetpkglib_LIBRARIES = libkernel.a

vpath %.cl @srcdir@/..
vpath %.c @srcdir@/..
vpath %.ll @srcdir@/..

include ../sources.mk

RANLIB = `@LLVM_CONFIG@ --bindir`/llvm-ranlib
AR = `@LLVM_CONFIG@ --bindir`/llvm-ar

if NATIVE_ARM

CLANGFLAGS += @NATIVE_CLANG_FLAGS@

# armv4t-unknown-linux-gnueabihf is generated by a Clang compiled in
# the ScratchBox cross-compiler env. TODO: Figure out what is the optimal
# tripe and switches, e.g., for ARMv7/NEON.
.cl.o:
	$(CLANG) $(AM_CPPFLAGS) $(CLANGFLAGS) -c -emit-llvm -I$(top_builddir) -include $(top_srcdir)/include/types.h -include $(top_srcdir)/include/_kernel.h -o $@ $<

else

CLANGFLAGS += @ARM_CLANG_FLAGS@

.cl.o:
	$(CLANG) $(AM_CPPFLAGS) $(CLANGFLAGS) -c -emit-llvm -include $(top_srcdir)/include/arm/types.h -include $(top_srcdir)/include/_kernel.h -o $@ $<

endif

.c.o:
	$(CLANG) $(AM_CPPFLAGS) $(CLANGFLAGS) -c -emit-llvm -include $(top_srcdir)/include/arm/types.h -o $@ $<

# TODO: This misses the dependency on the device-specific include files
# TODO: Dependencies should be generated automatically
$(patsubst %.c, %.o, $(filter %.c, $(libkernel_a_SOURCES))): $(top_srcdir)/include/arm/types.h
$(patsubst %.cl, %.o, $(filter %.cl, $(libkernel_a_SOURCES))): $(top_srcdir)/include/types.h $(top_srcdir)/include/arm/types.h $(top_srcdir)/include/_kernel.h ../templates.h
